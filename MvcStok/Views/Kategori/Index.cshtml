@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori ADI</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        <!--td normal punto ve th kalın punto.-->
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <td>@ktgr.KATEGORIAD</td>
                <td><a href="/KATEGORI/SIL/@ktgr.KATEGORIID" class="btn btn-danger">Sil</a></td>
                <td><a href="/KATEGORI/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<!--Aşağıdaki yeni kategori ekle action result ı bunu kontroller kısmına da eklememiz gerekiyor.
    Ilk olarak aşağısını yazıp kontroller kısmına yeni action u ekledik daha sonra ;
    Ordan yeni kategori.cshtml oluşturduk layout kısmında.-->
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>
